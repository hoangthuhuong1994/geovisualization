/* TEMPLATE.CSS */

/* change variables from waters.css and add new once */
:root {
    --background-body: #ddd; /* changed */
    --background-main: #fff; /* new */
	/* added into :root */ 
    --dark: #333;
    --text-reversed: #f2f2f2; 
    --reversed-hover: #eee;
    --accent: #6699dd;

}

body {max-width: 960px;}


article {
    background-color: var(--background-main);
    padding-top: 1em;
    padding-bottom: 1em;
    padding-left: 2em;
    padding-right: 2em;
}

.author {
    width: max-content;
}

.box {
    background-color: var(--background);
    padding-left: 1em;
    padding-right: 1em;
}

.columns {
    display: flex;
    gap: 2em;
}

.columns .col {
	display: flex;
	flex: 1;
}

